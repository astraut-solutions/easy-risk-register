# Environment variables for Easy Risk Register Frontend
# Copy this file to .env and update values as needed

# Vite configuration
NODE_ENV=development

# Port configuration (default Vite port is 5173)
VITE_PORT=5173

# Optional PocketBase cloud sync configuration (for future use)
VITE_POCKETBASE_URL=

# Feature flags
VITE_ENABLE_EXPORT=true
VITE_ENABLE_IMPORT=true
VITE_ENABLE_CLOUD_SYNC=false
VITE_ENABLE_TIMESERIES=false
VITE_ENABLE_GRAPH_DB=false
VITE_ENABLE_REALTIME=false
VITE_ENABLE_SIEM=false
VITE_ENABLE_VULN_SCANNER=false

# When feature-flagged integrations are enabled, the frontend calls these APIs.
# For local dev you can usually leave this blank to use same-origin.
VITE_API_BASE_URL=

# Analytics (optional, with user consent)
VITE_ANALYTICS_ENABLED=false

# Supabase (browser auth)
# These are safe to expose to the client (anon key is public); do NOT put service role keys in the frontend.
VITE_SUPABASE_URL=http://127.0.0.1:54321
VITE_SUPABASE_ANON_KEY=<anon key>

# IMPORTANT: Anything requiring a secret (service role keys, tokens, etc.) must be server-side only.
# Configure serverless API env vars at the repo root via `/.env.local` or in Vercel project settings.
#
# InfluxDB (alternative):
# - INFLUXDB_URL
# - INFLUXDB_TOKEN
# - INFLUXDB_ORG
# - INFLUXDB_BUCKET
